{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/classmatrix/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "packages/classmatrix/package.json",
        "outputPath": "dist/packages/classmatrix",
        "entryFile": "packages/classmatrix/index.ts",
        "tsConfig": "packages/classmatrix/tsconfig.json",
        "format": ["esm", "cjs"],
        "generateExportsField": true,
        "compiler": "babel"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/classmatrix/**/*.{ts,tsx,js,jsx}"]
      }
    }
  }
}
